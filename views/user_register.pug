extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='user') User:
      input#user.form-control(type='text',  name='user' value=(undefined===credentials ? '' : credentials.user_name))
      label(for='password') Password:
      input#password.form-control(type='text',  name='password' value=(undefined===credentials ? '' : credentials.hash_password))
    button.btn.btn-primary(type='submit') Submit
    


  if errors 
   ul
    for error in errors
     li!= error.msg

  if plainError 
    h2 #{plainError}